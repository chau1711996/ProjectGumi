<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.projectgumi">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".StartApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.ProjectGumi"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.splash.OnBordingActivity"/>
        <activity android:name=".ui.account.ProfileActivity"/>
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".sns.SNSLoginActivity" />
        <activity
            android:name=".ui.signInPhone.PhoneLoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".MainActivity"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6126203751977472~3696986400"/>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"
            tools:replace="value" /> <!-- Facebook API Key -->
        <service
            android:name=".utils.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>


</manifest>