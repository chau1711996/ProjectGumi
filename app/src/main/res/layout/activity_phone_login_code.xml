<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.signInPhone.PhoneLoginCodeActivity">
    <include
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/layout_head"
        layout="@layout/layout_head"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_code"
        app:layout_constraintTop_toBottomOf="@id/layout_head"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/edit_code"
            android:padding="20dp"
            android:hint="@string/enter_code"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/flGetCode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/bg_botron"
        android:src="@drawable/ic_arrow_right"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <TextView
        app:layout_constraintTop_toTopOf="@id/flGetCode"
        app:layout_constraintBottom_toBottomOf="@id/flGetCode"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_margin="20dp"
        android:id="@+id/text_resend"
        android:textColor="@color/button_bg"
        android:text="@string/resend_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>