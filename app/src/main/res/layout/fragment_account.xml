<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.account.AccountFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/layoutUser"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageAvt"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:scaleType="centerCrop"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textName"
            style="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintStart_toEndOf="@id/layoutUser"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="@id/layoutUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textPhone"
            style="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintStart_toEndOf="@id/layoutUser"
            app:layout_constraintBottom_toBottomOf="@id/layoutUser"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toBottomOf="@id/layoutUser"
            accountAdapter="@{adapterAccount}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_exit"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:background="@drawable/bg_logout"
            android:text="@string/logout"
            android:textColor="@color/button_bg"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent" />
        <Button
            android:id="@+id/buttonLogin"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:textSize="23sp"
            android:layout_height="60dp"
            android:background="@drawable/bg_button_green"
            android:text="Login"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <data>
        <variable
            name="adapterAccount"
            type="com.example.projectgumi.adapter.AccountAdapter" />
    </data>
</layout>
