<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imageBack"
        app:layout_constraintTop_toTopOf="@id/textCateloryName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textCateloryName"
        android:src="@drawable/ic_arrow_left"
        android:layout_marginStart="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/textCateloryName"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:text="@string/button_login_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image_right"
        app:layout_constraintTop_toTopOf="@id/textCateloryName"
        app:layout_constraintBottom_toBottomOf="@id/textCateloryName"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_fliter"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/layout_search"
        app:layout_constraintTop_toBottomOf="@id/textCateloryName"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        layout="@layout/layout_search"/>

</androidx.constraintlayout.widget.ConstraintLayout>