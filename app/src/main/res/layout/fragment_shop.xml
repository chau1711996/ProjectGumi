<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.core.widget.NestedScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".ui.shop.ShopFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@color/search_store_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutHead" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/viewPager"
                app:layout_constraintEnd_toEndOf="@id/viewPager"
                app:layout_constraintStart_toStartOf="@id/viewPager"
                app:tabBackground="@drawable/tab_selection" />

            <include
                android:id="@+id/layoutHead"
                layout="@layout/layout_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/layoutExclusive"
                layout="@layout/layout_exclusive_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/viewPager"
                bind:adapterExclusive="@{adapterExclusive}" />

            <include
                android:id="@+id/layoutBestSelling"
                layout="@layout/layout_best_selling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/layoutExclusive"
                bind:adapterBestSelling="@{adapterBestSelling}" />

            <include
                android:id="@+id/layoutCatelory"
                layout="@layout/layout_catelory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/layoutBestSelling"
                bind:apdaterCatelory="@{adapterCatelory}"
                bind:apdaterProduct="@{adapterProduct}" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <data>

        <variable
            name="model"
            type="com.example.projectgumi.viewmodel.ShopViewModel" />

        <variable
            name="adapterExclusive"
            type="com.example.projectgumi.adapter.ProductItemAdapter" />

        <variable
            name="adapterBestSelling"
            type="com.example.projectgumi.adapter.ProductItemAdapter" />

        <variable
            name="adapterCatelory"
            type="com.example.projectgumi.adapter.CateloryAdapter" />
        <variable
            name="adapterProduct"
            type="com.example.projectgumi.adapter.ProductItemAdapter" />
    </data>
</layout>
