<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.core.widget.NestedScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.shop.ShopFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/layoutView"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutHead"
                app:cardCornerRadius="15dp"
                android:layout_height="wrap_content">
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:tabGravity="center"
                    app:tabIndicatorColor="@color/viewpager"
                    app:tabBackground="@drawable/tab_selection" />
            </androidx.cardview.widget.CardView>

            <include
                android:id="@+id/layoutHead"
                layout="@layout/layout_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/layoutExclusive"
                layout="@layout/layout_exclusive_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/layoutView"
                bind:adapterExclusive="@{adapterExclusive}" />

            <include
                android:id="@+id/layoutBestSelling"
                layout="@layout/layout_best_selling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/layoutExclusive"
                bind:adapterBestSelling="@{adapterBestSelling}" />

            <include
                android:id="@+id/layoutCatelory"
                layout="@layout/layout_catelory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/layoutBestSelling"
                bind:apdaterCatelory="@{adapterCatelory}"
                bind:apdaterProduct="@{adapterProduct}" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <data>

        <variable
            name="model"
            type="com.example.projectgumi.viewmodel.ShopViewModel" />

        <variable
            name="adapterExclusive"
            type="com.example.projectgumi.adapter.ProductItemAdapter" />

        <variable
            name="adapterBestSelling"
            type="com.example.projectgumi.adapter.ProductItemAdapter" />

        <variable
            name="adapterCatelory"
            type="com.example.projectgumi.adapter.CateloryAdapter" />
        <variable
            name="adapterProduct"
            type="com.example.projectgumi.adapter.ProductItemAdapter" />
    </data>
</layout>
