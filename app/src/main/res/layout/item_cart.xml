<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="cartModel"
            type="com.example.projectgumi.data.model.CartModel" />
    </data>
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:id="@+id/layoutItemCart"
        android:layout_height="wrap_content">
        <View
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/search_store_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingVertical="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageProduct"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                loadImageProduct="@{cartModel.url}"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutProduct"
                app:layout_constraintTop_toTopOf="@id/imageProduct"
                app:layout_constraintBottom_toBottomOf="@id/imageProduct"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/imageProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textProductName"
                    style="@style/MyCustomTextProductName"
                    android:text="@{cartModel.productName}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textProductPrice"
                    style="@style/MyCustomTextProductPrice"
                    android:layout_marginTop="10dp"
                    android:text="@{cartModel.unit}"
                    app:layout_constraintTop_toBottomOf="@id/textProductName"
                    app:layout_constraintStart_toStartOf="@id/textProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/count_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/textProductPrice"
                    app:layout_constraintStart_toStartOf="@id/textProductName"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageGiam"
                        android:src="@drawable/ic_dash"
                        android:layout_width="30dp"
                        android:background="@drawable/bg_amount_product"
                        android:layout_height="30dp"
                        android:contentDescription="@string/reduce_the_number_product" />

                    <TextView
                        android:id="@+id/textUnit"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="3dp"
                        android:paddingVertical="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="@{String.valueOf(cartModel.amount)}" />

                    <ImageView
                        android:id="@+id/imageTang"
                        android:src="@drawable/ic_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_amount_product"
                        android:contentDescription="@string/increasing_the_number_product" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/imageDelete"
                app:layout_constraintTop_toTopOf="@id/layoutProduct"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_close"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <TextView
                android:id="@+id/textMoney"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_marginTop="5dp"
                sumMoneyCart="@{cartModel}"
                app:layout_constraintBottom_toBottomOf="@id/layoutProduct"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
